/**
 * Variation of stdlib/TimezoneOffset.
 */
function hTimezoneOffset ($h, $use_colon = true) {
    $secs = $h*60*60;
    if ($secs < 0) {
        $sign = '-';
        $secs = -$secs;
    }
    else {
        $sign = '+';
    }
    $colon = $use_colon ? ':' : '';
    $mins = intval(($secs + 30) / 60);
    return sprintf("%s%02d%s%02d",
                   $sign, $mins / 60, $colon, $mins % 60);
}

